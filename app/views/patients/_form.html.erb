<%= form_with model: @patient do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :date_of_birth %>
  <%= f.date_field :date_of_birth %>

  <%= f.label :gender %>
  <%= f.select :gender, Patient.genders.keys %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.submit %>
<% end %>
