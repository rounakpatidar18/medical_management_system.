<!-- app/views/devise/registrations/new.html.erb -->
<h1>Sign Up</h1>


<%= form_with model: @user, url: admin_users_path, local: true do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :role %><br>
    <%= f.select :role, [["Admin", 1], ["Super Admin", 2], ["Other", 0]], selected: resource.role || 1 %>
  </div>

  <div>
    <%= f.label :active %><br>
    <%= f.check_box :active, {}, true, false %>
  </div>

  <div>
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
